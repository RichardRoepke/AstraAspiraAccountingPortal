.container
  .box.box-warning
    .box-header.with-border
      %h4 Edit Park
    .box-body
      = bootstrap_form_for(@park, url: admin_park_path(@park), method: :patch, html: { data: { remote: 'true' } }) do |f|
        = f.text_field :name
        = f.text_field :address
        = f.text_field :city
        = f.text_field :zipcode
        -# TODO: Get list of states/provinces from Central Catalogue and organize it into a selection.
        = f.phone_field :phone
        = f.email_field :email
        = f.check_box :report
        = f.submit 'Submit Changes'
