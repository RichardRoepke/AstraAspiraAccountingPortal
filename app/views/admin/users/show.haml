.container
  .col-md-6
    .box.box-primary
      .box-header.with-border
        %h4 User Details
      .box-body
        %table#admin-table{ width: '100%' }
          %tbody
            %tr
              %th Email
              %td= @user.email
            %tr
              %th Confirmed
              - if @user.confirmed_at.present?
                %td
                  %i.fa.fa-check
              - else
                %td
                  %i.fa.fa-times
            %tr
              %th Confirmed At
              %td= @user.confirmed_at
            %tr
              %th Confirmation Sent At
              %td= @user.confirmation_sent_at
            %tr
              %th Logins
              %td= @user.sign_in_count
            %tr
              %th Last Login
              %td= @user.current_sign_in_at