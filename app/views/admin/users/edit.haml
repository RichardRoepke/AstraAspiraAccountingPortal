.container
  = render 'user_actions'

  .box.box-warning
    .box-header.with-border
      %h4 Edit User
    .box-body
      = bootstrap_form_for(@user, url: admin_user_path(@user), method: :patch, html: { data: { remote: 'true' } }) do |f|
        = f.text_field :email
        - unless @user.id == current_user.id
          = f.check_box :admin
        = f.submit 'Submit Changes'
  .box.box-info
    .box-header.with-border
      %h4 Set New Password
    .box-body
      = bootstrap_form_for(@user, url: admin_user_path(@user), method: :patch, html: { data: { remote: 'true' } }) do |f|
        = f.password_field :password
        = f.password_field :password_confirmation
        = f.submit 'Submit Changes'